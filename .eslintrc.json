{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true,
    "jest": true,
    "amd": true,
    "node": true
  },
  "extends": ["plugin:@typescript-eslint/recommended"],
  "rules": {
    "semi": [2, "always"]
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-import"]
}
